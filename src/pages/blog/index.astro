---
import Layout from "../../layouts/Layout.astro";
import { Content } from "./_story.mdx";
---

<Layout title="Welcome to Astro.">
  <main
    class="text-black dark:text-white max-w-[60ch] [&_h2]:text-white mx-auto p-10 border border-white/10 border-dashed tracking-tight m-10 rounded-md [&>*>h2]:text-2xl"
  >
    <Content />
  </main>
  <style is:inline>
    h2 {
      font-weight: 800;
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.1rem;
    }
    p {
      font-size: 1rem;
      width: 100%;
      font-weight: 550;
      line-height: 1.75rem;
      color: #adadad;
      padding-bottom: 1rem;
    }
    a {
      color: #146df3;
      text-decoration: underline;
      text-underline-offset: 0.25rem;
    }
  </style>
</Layout>
